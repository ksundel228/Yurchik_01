<Window x:Class="zadanie_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фигурные кнопки" Height="450" Width="250">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Треугольная кнопка -->
                <Button Width="120" Height="120">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Path Stroke="Black" Fill="LightBlue" Data="M 60,0 L 0,100 L 120,100 Z"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Круглая кнопка -->
                <Button Width="120" Height="120">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Stroke="Black" Fill="Red"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Пирамидальная кнопка -->
                <Button Width="120" Height="120">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Path Stroke="Black" Fill="Gold" Data="M 60,0 L 0,100 L 120,100 Z"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
</Window>
