<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:podzadanie_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Width="800" Height="400" Background="White">
        <!-- Внешний круг -->
        <Ellipse Width="200" Height="200" Stroke="Black" StrokeThickness="2"
             Canvas.Left="300" Canvas.Top="100"/>

        <!-- Средний круг -->
        <Ellipse Width="140" Height="140" Stroke="Black" StrokeThickness="2"
             Canvas.Left="330" Canvas.Top="130"/>

        <!-- Внутренний круг -->
        <Ellipse Width="80" Height="80" Stroke="Black" StrokeThickness="2"
             Canvas.Left="360" Canvas.Top="160"/>
    </Canvas>
</Window>
